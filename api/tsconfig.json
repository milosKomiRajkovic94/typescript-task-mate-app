{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["dom", "es2017", "esnext.asynciterable"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
